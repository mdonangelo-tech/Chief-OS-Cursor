generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// --- Auth (Auth.js compatible) ---
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  googleAccounts        GoogleAccount[]
  goals                 Goal[]
  categories            Category[]
  orgRules              OrgRule[]
  personRules           PersonRule[]
  auditLogs             AuditLog[]
  declutterPref         UserDeclutterPref?
  categoryDeclutterRules CategoryDeclutterRule[]
  rejectedSuggestions   RejectedSuggestion[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- ChiefOS models ---
model GoogleAccount {
  id                    String   @id @default(cuid())
  userId                String
  email                 String
  refreshTokenEncrypted String
  accessToken           String?
  tokenExpiry           DateTime?
  userDefinedLabel      String?   // e.g. "personal", "work"
  syncStateJson         Json?     // last sync cursor, errors, etc.
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailEvents    EmailEvent[]
  calendarEvents CalendarEvent[]
  auditLogs      AuditLog[]

  @@unique([userId, email])
}

model UserDeclutterPref {
  id                 String   @id @default(cuid())
  userId             String   @unique
  autoArchiveEnabled Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CategoryDeclutterRule {
  id              String   @id @default(cuid())
  userId          String
  categoryId      String
  action          String   // "label_only" | "archive_after_48h" | "archive_after_days" | "never"
  archiveAfterDays Int?    // when action = archive_after_days
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId])
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id                    String   @id @default(cuid())
  userId                String
  name                  String
  parentId              String?
  protectedFromAutoArchive Boolean @default(false)
  gmailLabelId          String?  // Gmail label ID when imported from Gmail
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryHierarchy")

  orgRules            OrgRule[]
  personRules         PersonRule[]
  emailEvents         EmailEvent[]
  calendarEvents      CalendarEvent[]
  declutterRules      CategoryDeclutterRule[]
}

model OrgRule {
  id         String   @id @default(cuid())
  userId     String
  domain     String
  categoryId String
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, domain])
}

model PersonRule {
  id         String   @id @default(cuid())
  userId     String
  email      String
  categoryId String
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
}

model RejectedSuggestion {
  id         String   @id @default(cuid())
  userId     String
  type       String   // "person" | "domain"
  value      String   // email or domain
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, value])
  @@index([userId])
}

model EmailEvent {
  id                 String   @id @default(cuid())
  googleAccountId    String
  messageId          String   @unique
  threadId           String
  from_              String   @map("from")
  to                 String?
  cc                 String?
  subject            String?
  snippet            String?
  date               DateTime
  labels             String[]
  unread             Boolean  @default(true)
  senderDomain       String?
  bodyFetched        Boolean  @default(false)
  bodyPlain          String?  @db.Text
  bodyHtml           String?  @db.Text
  syncAt             DateTime @default(now())

  // Classification
  classificationCategoryId String?
  importanceScore         Float?
  needsAction             Boolean?
  actionType              String?   // reply|schedule|read|ignore
  confidence              Float?
  explainJson             Json?     // { source: "rule"|"llm", reason, ... }

  googleAccount GoogleAccount @relation(fields: [googleAccountId], references: [id], onDelete: Cascade)
  category      Category?     @relation(fields: [classificationCategoryId], references: [id], onDelete: SetNull)

  @@index([googleAccountId, date])
  @@index([threadId])
}

model CalendarEvent {
  id              String   @id @default(cuid())
  googleAccountId String
  eventId         String
  title           String?
  startAt         DateTime
  endAt           DateTime
  durationMinutes Int?
  attendees       String[]
  organizer       String?
  location        String?
  recurrence      String?  @db.Text
  syncAt          DateTime @default(now())

  // Classification (optional for calendar)
  classificationCategoryId String?
  importanceScore         Float?
  needsAction             Boolean?
  confidence              Float?
  explainJson             Json?

  googleAccount GoogleAccount @relation(fields: [googleAccountId], references: [id], onDelete: Cascade)
  category      Category?     @relation(fields: [classificationCategoryId], references: [id], onDelete: SetNull)

  @@unique([googleAccountId, eventId])
  @@index([googleAccountId, startAt])
}

model AuditLog {
  id               String   @id @default(cuid())
  userId           String
  googleAccountId  String
  messageId        String?
  threadId         String?
  runId            String?   // groups archive actions from same auto-archive run
  timestamp        DateTime @default(now())
  actionType       String   // ARCHIVE, etc.
  reason           String?  // rule vs LLM, category
  confidence       Float?
  beforeLabelsJson Json
  afterLabelsJson  Json
  rollbackStatus   String   @default("applied") // applied | reverted

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  googleAccount GoogleAccount @relation(fields: [googleAccountId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([googleAccountId])
  @@index([timestamp])
  @@index([runId])
}
